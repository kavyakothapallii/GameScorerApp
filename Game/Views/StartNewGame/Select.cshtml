@model List<Game.Models.Player>

@{
    ViewData["Title"] = "Start New Game";
}

<h2>Start New Game</h2>

<form asp-action="Select" method="post">
    <!-- Max Score Input -->
    <div class="form-group">
        <label for="maxscore">Max Score:</label>
        <input type="number" name="maxscore" id="maxscore" class="form-control" min="1" required />
    </div>

    <!-- Player Selection -->
    <h3>Select Players:</h3>
    <div class="form-group">
        @foreach (var player in Model)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="selected" value="@player.Id" id="player_@player.Id" />
                <label class="form-check-label" for="player_@player.Id">@player.Name</label>
            </div>
        }
    </div>

    <!-- Validation Errors -->
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="text-danger">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <p>@error.ErrorMessage</p>
            }
        </div>
    }

    <!-- Submit Button -->
    <button type="submit" class="btn btn-primary mt-3">Start Game</button>
</form>
