@model IEnumerable<Game.Models.Player>

@{
    ViewData["Title"] = "Player List";
}

<h2>Player List</h2>

<a asp-action="Add" class="btn btn-primary mb-3">Add New Player</a>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Id</th> <!-- New column for ID -->
            <th>Name</th>
            <th style="width: 120px;">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var player in Model)
        {
            <tr>
                <td>@player.Id</td> <!-- Display ID here -->
                <td>@player.Name</td>
                <td>
                    <form asp-action="Delete" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@player.Id" /> <!-- Note: parameter name matches controller -->
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
